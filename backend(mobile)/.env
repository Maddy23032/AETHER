# AETHER Mobile Security Backend Configuration
# Copy this file to .env and modify as needed

# Application
APP_NAME=AETHER Mobile Security
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8001

# MobSF Configuration
MOBSF_URL=http://localhost:8000
MOBSF_USERNAME=mobsf
MOBSF_PASSWORD=mobsf
MOBSF_IMAGE=opensecurity/mobile-security-framework-mobsf:latest
MOBSF_CONTAINER_NAME=aether-mobsf
MOBSF_AUTO_START=false
# API key is fetched automatically at runtime - no need to configure

# File Upload
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=[".apk", ".xapk", ".apks", ".ipa"]

# Directories
UPLOAD_DIR=uploads
REPORTS_DIR=reports
LOGS_DIR=logs

# Concurrency
MAX_CONCURRENT_SCANS=3
SCAN_TIMEOUT=600

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
